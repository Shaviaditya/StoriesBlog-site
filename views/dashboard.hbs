<h5>Dashboard</h5>
<h3>Welcome {{name}}</h3>
<h5>Your Stories/pieces</h5>
{{#if stories}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each stories}}
            <tr>
                <td>
                    <a href="/stories/{{_id}}"></a>
                    {{title}}
                </td>
                <td>{{formatDate createdAt 'MMMM DD YYYY, h:mm:ss a'}}</td>
                <td><span class="dash-status">{{status}}</span></td>
                <td>
                    <a href="/stories/edit/{{_id}}" class="btn btn-float">
                        <i class="fas fa-edit"></i>
                    </a>
                </td>
                <td>
                    <a href="/stories/delete/{{_id}}" class="btn red">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p>You have not created any stories</p>
{{/if}}